@import "../../../style/skin.wxss";

.list {
	width: 100%;
	padding: 10rpx 30rpx 30rpx;
	display: flex;
	flex-direction: column;
}

.list .item {
	width: 100%;
	display: flex;
	padding: 0rpx 0rpx;
	overflow: hidden;
	position: relative;
	flex-direction: column;
	border-radius: 20rpx;
	margin-bottom: 30rpx;
}


.list .item .top {
	display: flex;
	align-items: flex-start;
	position: relative;
	overflow: hidden;
}


.list .item .top .mark {
	position: absolute;
	top: 10rpx;
	left: 20rpx;
	font-size: 22rpx;
	z-index: 9;
	background-color: rgba(92, 156, 227, .8);
	color: #fff;
	padding: 6rpx 20rpx;
	border-radius: 14rpx;
}

.list .item .top image {
	width: 100%;
	height: 300rpx;
	border-top-left-radius: 20rpx;
	border-top-right-radius: 20rpx;
}

.list .item .bottom {
	width: 100%;
	display: flex;
	background-color: #fff;
	padding: 16rpx 20rpx 26rpx;
	padding-left: 10rpx;
}

.list .item .bottom .left {
	flex: 1;
	border-left: 4rpx solid var(--projectCompareColor);
	padding-left: 10rpx;
}


.list .item .bottom .left .title {
	width: 100%;
	font-size: 28rpx;
	font-weight: bold;
	color: #333;
}

.list .item .bottom .left .desc {
	width: 100%;
	font-size: 24rpx;
	color: #999;
	padding: 10rpx 0 0;
}

.list .item .bottom .right {
	margin-left: 10rpx;
	display: flex;
	align-items: center;
}

.list .item .bottom .right .status {
	margin-left: 10rpx;
}

.list .item .bottom .right .status>text {
	font-size: 24rpx;
	padding: 14rpx 30rpx;
	border-radius: 40rpx;
}



.top_bar {
	width: 100%;
	background-color: #fff !important;
}

.tabs {
	width: unset !important;
	background-color: #fff !important;
}


.bar.fixed,
.nav.fixed {
	box-shadow: unset !important;
}